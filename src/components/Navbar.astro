    <a href="/tickets" class="hidden md:block px-6 py-2.5 bg-gradient-to-r from-fuchsia-600 to-cyan-500 rounded-full font-bold text-sm hover:shadow-lg hover:shadow-fuchsia-500/50 transition-all duration-300 hover:scale-105">
      GET TICKETS
    </a>

    <!-- Mobile Hamburger Button -->
    <button id="mobile-menu-button" class="md:hidden relative z-10 w-10 h-10 flex flex-col items-center justify-center gap-1.5">
      <span class="w-6 h-0.5 bg-white transition-all duration-300"></span>
      <span class="w-6 h-0.5 bg-white transition-all duration-300"></span>
      <span class="w-6 h-0.5 bg-white transition-all duration-300"></span>
    </button>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="fixed inset-0 bg-black/95 backdrop-blur-xl z-[99] transform translate-x-full transition-transform duration-300 ease-in-out md:hidden pt-20">
    <div class="flex flex-col items-center justify-start h-full gap-6 px-6 py-8 overflow-y-auto">
      <a href="#artists" class="mobile-menu-link text-2xl font-bold bebas tracking-wider gradient-text hover:scale-105 transition-transform duration-300">LINEUP</a>
