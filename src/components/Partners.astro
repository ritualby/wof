---
const partners = [
  { name: "Detik.com", img: "/partners/detik.png" },
  { name: "RCTI", img: "/partners/rcti.png" },
  { name: "GTV", img: "/partners/gtv.png" },
  { name: "iNews", img: "/partners/inews.png" },
  { name: "RCTI+", img: "/partners/rctiplus.png" },
  { name: "SindoNews", img: "/partners/sindonews.png" },
  { name: "Okezone", img: "/partners/okezone.png" },
  { name: "Almadera", img: "/partners/almadera.png" },
  { name: "Claro", img: "/partners/claro.png" },
  { name: "Clink", img: "/partners/clink.png" },
  { name: "CMN", img: "/partners/cmn.png" },
  { name: "Devis", img: "/partners/devis.png" },
];
---

<section id="partners" class="py-28 bg-gradient-to-br from-zinc-950 via-black to-zinc-950 relative overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute inset-0 opacity-20">
    <div class="absolute top-1/3 left-1/4 w-96 h-96 bg-purple-600 rounded-full filter blur-[150px]"></div>
    <div class="absolute bottom-1/3 right-1/4 w-80 h-80 bg-cyan-600 rounded-full filter blur-[140px]"></div>
  </div>

  <div class="max-w-7xl mx-auto px-6 lg:px-12 relative z-10">
    <div class="text-center mb-16 observe">
      <h2 class="text-6xl md:text-8xl font-black bebas gradient-text mb-4">
        PARTNERS
      </h2>
      <p class="text-xl text-white/60 font-light">Supported by amazing partners</p>
    </div>

    <!-- Partners Grid -->
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-8">
      {partners.map((partner, index) => (
        <div 
          class="observe flex items-center justify-center p-6 bg-white/5 backdrop-blur-sm rounded-2xl border border-white/10 hover:border-white/20 hover:bg-white/10 transition-all duration-300 hover:scale-105"
          style={`animation-delay: ${index * 0.05}s`}
        >
          <img 
            src={partner.img} 
            alt={partner.name} 
            class="w-full h-auto max-h-16 object-contain opacity-70 hover:opacity-100 transition-opacity duration-300 grayscale hover:grayscale-0"
          />
        </div>
      ))}
    </div>
  </div>
</section>
